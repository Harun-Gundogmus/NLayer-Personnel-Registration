@model EntityLayer.Concrate.Personel
<form asp-action="Update" asp-controller="Personel" method="post">
    <div class="mb-3" style="display:none">
        <label class="form-label">PERSONEL ID</label>
        <input asp-for="personel_id" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">PERSONEL ADI</label>
        <input asp-for="personel_name" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">PERSONEL SOYADI</label>
        <input asp-for="personel_surname" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">PERSONEL YAŞI</label>
        <input asp-for="personel_age" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">UPDATE PERSONEL</button>
</form>
